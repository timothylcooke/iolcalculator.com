{
	"name": "iolcalculator.com",
	"version": "1.0.0",
	"description": "",
	"main": "api/_worker.ts",
	"scripts": {
		"debug": "start /b tsc --build --watch ./config/api-tsconfig.dev.json && start /b webpack --watch --progress --config config/webpack.dev.js && wrangler pages dev ./dist/dev/ --ip 127.0.0.1 --compatibility-date 2024-02-22",
		"release": "glob -c \"node --loader tsx --test\" \"./tests/*.ts\" && webpack --progress --config config/webpack.prod.js && tsc --build ./config/api-tsconfig.prod.json",
		"test": "glob -c \"node --watch --import tsx --test\" \"./tests/*.ts\""
	},
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20240222.0",
		"@types/react-dom": "^18.2.19",
		"@typescript-eslint/eslint-plugin": "^7.1.0",
		"copy-webpack-plugin": "^12.0.2",
		"css-loader": "^6.10.0",
		"eslint-plugin-react": "^7.33.2",
		"eslint-webpack-plugin": "^4.0.1",
		"glob": "^10.3.10",
		"html-webpack-plugin": "^5.6.0",
		"less-loader": "^12.2.0",
		"npm": "^10.5.0",
		"prune": "^0.0.2",
		"react-bootstrap": "^2.10.1",
		"react-dom": "^18.2.0",
		"react-router-dom": "^6.22.2",
		"style-loader": "^3.3.4",
		"ts-loader": "^9.5.1",
		"tsx": "^4.7.1",
		"webpack": "^5.90.3",
		"webpack-cli": "^5.1.4",
		"wrangler": "^3.30.1"
	},
	"eslintConfig": {
		"settings": {
			"react": {
				"version": "detect"
			}
		},
		"env": {
			"browser": true,
			"es2021": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:react/recommended"
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": "latest",
			"sourceType": "module"
		},
		"plugins": [
			"@typescript-eslint",
			"react"
		],
		"rules": {
			"indent": [
				"error",
				"tab"
			],
			"linebreak-style": [
				"error",
				"windows"
			],
			"quotes": [
				"error",
				"single"
			],
			"semi": [
				"error",
				"always"
			],
			"react/react-in-jsx-scope": "off",
			"no-trailing-spaces": "error",
			"no-multiple-empty-lines": [
				"error",
				{
					"max": 1,
					"maxEOF": 1
				}
			],
			"eol-last": [
				"error",
				"always"
			]
		}
	}
}
